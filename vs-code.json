{
  "extensions.autoUpdate": false, // 关闭自动更新
  "workbench.startupEditor": "newUntitledFile", // 打开进入无标题文件
  "editor.mouseWheelZoom": true, // 鼠标 + ctrl 字体缩放
  "editor.fontSize": 15, // 字体大小
  "git.ignoreMissingGitWarning": true, // git警告
  "editor.multiCursorModifier": "alt", // alt + 鼠标指针显示地址
  "html.format.indentInnerHtml": true, // 缩进<body> <head>
  "editor.wordWrap": "on", // 在空白字符上显示符号。
  "editor.tabSize": 2, // tab 缩进字符
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true, // #让函数(名)和后面的括号之间加个空格
  "workbench.iconTheme": "vscode-great-icons", //图标
  "css.validate": false,
  "less.validate": false,
  "workbench.activityBar.visible": true, // 控制工作台中活动栏的可见性。
  "workbench.statusBar.visible": true,
  "window.zoomLevel": -1,
  "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
  "emmet.syntaxProfiles": {
    "vue-html": "html",
    "vue": "html"
  },
  "emmet.triggerExpansionOnTab": true, // tab 键补全 ==> vue下多数使用
  // 控制编辑器是否自动格式化粘贴的内容。格式化程序必须可用，并且能针对文档中的某一范围进行格式化。
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false, // 自动保存后是否格式化
  // "editor.formatOnType": true,
  "editor.fontFamily": "'Fira Code', Consolas, 'Microsoft YaHei', 'Courier New', monospace",
  "emmet.includeLanguages": {
    "wxml": "html"
  },
  "explorer.confirmDelete": false,
  // Sass 代码
  "easysass.formats": [
    // 编译后的内容格式,默认情况(原始+压缩版)
    {
      "format": "compact",
      "extension": ".css"
    }
  ],
  // 配置less输出的目录
  // "out": "${workspaceRoot}\\css\\css下目录的名称\\"
  "less.compile": {
    "out": "${workspaceRoot}\\css\\"
  },
  "easysass.targetDir": "css/",
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.renderWhitespace": "none",
  /*  prettier的配置 */
  // 配置 vue 文件格式化
  "vetur.format.defaultFormatter.js": "vscode-typescript",
  "prettier":{
    "singleQuote":true,// 使用单引号代替双引号
    "semi":false, // 句尾不添加分号
    "jsxBracketSameLine":false, // 在jsx中把'>' 是否单独放一行
    "trailingComma": "es5", // 在对象或数组最后一个元素后面是否加逗号（在ES5中加尾逗号）
    "arrowParens": "avoid",//  (x) => {} 箭头函数参数只有一个时是否要有小括号。avoid：省略括号
    "printWidth": 120, // 超过最大值换行
    "tabWidth": 2, // 缩进字节数
    "bracketSpacing": true, // 在对象，数组括号与文字之间加空格 "{ foo: bar }"
    "parser": "babylon", // 格式化的解析器，默认是babylon
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}